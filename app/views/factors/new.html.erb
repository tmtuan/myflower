<div class="container">
  <h1>Add new factor</h1>
  <%= form_for :factor, url: factors_path, html: { :class => "form-group" } do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, :class => "form-control" %>
      </div>

      <%= f.submit "Save", :class => "btn btn-primary btn-lg" %>

  <% end %>
</div>